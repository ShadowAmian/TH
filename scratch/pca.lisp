(defun cov (x &optional biased)
  (let ((m x))
    (when (> ($ndim m) 2)
      (error "x has more than 2 dimensions."))
    (when (< ($ndim m) 2)
      (setf m ($view m 1 -1)))
    (let ((a ($- m ($repeat ($mean m 0) ($size m 0) 1))))
      ($div! ($@ ($transpose a) a) (- ($size x 0) (if biased 0 1))))))

